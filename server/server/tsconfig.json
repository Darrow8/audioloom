{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "preserveConstEnums": true,
    "sourceMap": false
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": [
    "server.ts",
    "src-db/**/*.ts",
    "src-pod/**/*.ts"
  ]
}