{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "paths": {
      "@shared/*": ["../shared/src"],
      "@/*": ["./src-db/*", "./src-pod/*"]
    },
  },
  "exclude": ["node_modules"],
  "include": [
    "server.ts",
    "src-db/**/*.ts",
    "src-pod/**/*.ts",
    "**/*.test.ts",
  ]
}