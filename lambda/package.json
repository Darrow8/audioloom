{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "npx tsx src/main.ts",
    "pod": "npx tsx src/process_pod.ts",
    "lambda-full": "npm run build && npm run lambda-start",
    "build": "esbuild src/*.ts --platform=node --format=esm --outdir=dist/",
    "dbuild": "esbuild src/*.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outdir=dist/",
    "lambda-start": "sam build && sam local invoke",
    "docker-build": "docker build --platform linux/amd64 -t rivet .",
    "docker-run": "docker run -it -v \"$(pwd)/temp-data:/tmp\" --env-file .env --platform linux/amd64 -p 9000:8080 rivet",
    "docker-start": "npm run docker-build && npm run docker-run"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.623.0",
    "@aws-sdk/client-s3": "^3.606.0",
    "@aws-sdk/client-secrets-manager": "^3.624.0",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/uuid": "^10.0.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1670.0",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "elevenlabs": "^0.8.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.2.0",
    "lambda-local": "^2.2.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.52.2",
    "request": "^2.88.2",
    "streamifier": "^0.1.1",
    "tiktoken": "^1.0.15"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.142",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.14",
    "@types/request": "^2.48.12",
    "@typescript-eslint/parser": "^7.16.0",
    "esbuild": "0.23.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
